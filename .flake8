[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    wheels,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    __init__.py:F401
max-complexity = 10
enable-extensions = D
docstring-convention = google

